generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow{
  id String @id @default(cuid())
  userId String 
  name String
  description String?

  definition String
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  // prevent user from creating workflows with same name
  @@unique([name,userId])



}




